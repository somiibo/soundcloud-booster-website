---
layout: null
permalink: /feeds/posts.xml
---

<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <atom:link href="{{ site.url }}{{ page.url }}" rel="self" type="application/rss+xml" />
    <title>
      <![CDATA[
        {{ site.brand.name }} Blog
      ]]>
    </title>
    <description>
      <![CDATA[
        {{ site.brand.description }}
      ]]>
    </description>
    <link>
      {{ site.url }}/blog
    </link>
    <generator>
      Jekyll {{ jekyll.version }}
    </generator>
    <lastBuildDate>
      {{ site.time | date: "%a, %d %b %Y %H:%M:%S" }} GMT
    </lastBuildDate>
    <language>
      <![CDATA[ en ]]>
    </language>

    {% assign sortedFeed = site.posts | sort: 'date' | reverse | limit:25 %}

    {% for post in sortedFeed %}
      {% comment %} Include this because limit:25 doesnt work?? {% endcomment %}
      {% if forloop.index > 25 %}
        {% break %}
      {% endif %}

      {%- capture post-title -%}
        {%- if post.meta.title -%}
          {{ post.meta.title }}
        {%- else -%}
          {{ post.post.title }}
        {%- endif -%}
      {%- endcapture -%}
      <item>
        <title>
          <![CDATA[
            {{ post-title }}
          ]]>
        </title>
        <link>
          {{ site.url }}{{ post.url }}
        </link>
        <guid isPermaLink="true">
          {{ site.url }}{{ post.url }}
        </guid>
        <pubDate>
          {{ post.date | date: "%a, %d %b %Y %H:%M:%S" }} GMT
        </pubDate>
        <description>
          <![CDATA[
            {% if post.meta.description %}
              {{ post.meta.description }}
            {% else %}
              {{ post.post.excerpt }}
            {% endif %}
          ]]>
        </description>
        <content:encoded>
          <![CDATA[
            {{ post.content | liquify | markdownify | strip_ads }}
          ]]>
        </content:encoded>
        <dc:creator>
          <![CDATA[
            {{ site.brand.name }}
          ]]>
        </dc:creator>
        <category>
          <![CDATA[
            {{ post.post.category }}
          ]]>
        </category>
      </item>
    {% endfor %}
  </channel>
</rss>

            ['data-wm-bind', '@show auth.account.roles.admin']
          ]
        },
        {
          label: 'Admin Panel',
          href: '/admin',
          icon: 'shield-halved',
          attributes: [
            ['data-wm-bind', '@show auth.account.roles.admin']
          ]
        },
        {
          divider: true,
        },
        {
          label: 'Sign Out',
          icon: 'arrow-right-from-bracket',

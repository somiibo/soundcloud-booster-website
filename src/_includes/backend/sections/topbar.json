      label: 'Notifications',
      badge: {
        text: '3',
        color: 'danger'
      },
      dropdown: [
        {
          title: 'New message',
          message: 'You have a new message from John',
          time: '5 min ago',
          icon: 'envelope',
          icon_color: 'primary',
          href: '/dashboard/messages',
          unread: true
        },
        {
          title: 'System update',
          message: 'Your account has been updated',
          time: '1 hour ago',
          icon: 'circle-check',
